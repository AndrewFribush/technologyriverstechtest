<%= form_for(@album, :html => { :multipart => true }) do |f| %>
   <div class="field form-group">
     <%= f.label :title %><br>
     <%= f.text_field :title , class: "form-control"%>
   </div>

  <%= f.fields_for :album_attachment do |p| %>
    <div class="field form-group">
      <%= p.label :picture %><br>
      <%= p.file_field :picture, :multiple => true, name: "photo[picture][]" %>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.submit "Submit" , class: "btn btn-success btn-lg"%>
  </div>
<% end %>

<ul class="list-inline">
  <% @album_attachment.each do |p| %>
    <li>
      <%= cl_image_tag(p.picture, {:class => "thumbnail inline", :background=>"black", :crop=>"pad", :height => 250, :width => 250}) %>
    </li>
  <% end %>
</ul>
