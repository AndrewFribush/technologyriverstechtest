<%= form_for(@photo) do |f| %>
<%= image_tag @photo.picture %>
  <div class="field">
    <%= f.label :post_id %><br>
    <%= f.number_field :album_id %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
